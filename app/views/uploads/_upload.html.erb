<div class="uploads_section upload_infinite_scroll">
	<div align="center" style="font-family: 'IM Fell DW Pica'; color: white; font-size:2em;">
	  <b>List of all Uploads</b>
	</div>
	<br>
	<div id="uploads">
	  <% @uploads.each do |upload| %>
		<div class="flex-item-uploads">
			<h5><%= upload.subject.name	 %></h5>
		    <h5>
		      &nbsp;&nbsp;&nbsp;<%= link_to upload.topic, upload.file.url , target: "_blank" %>
		      <small>
		      &nbsp;uploaded by: <%= upload.user.name %> &nbsp; 
		        <small><%= time_ago_in_words(upload.created_at) %> ago</small>
		      </small>
		    </h5>
		</div>
	  <% end %>

	  <% @links.each do |link| %>
	  	<div class="flex-item-uploads">
	  		<h5><%= link.subject.name %></h5>
	  		<h5>
	  			&nbsp;&nbsp;&nbsp;
	  			<%= link_to link[:topic], url_with_protocol(link[:url]), target: "_blank" %>
	  			<small>
		      		&nbsp;uploaded by: <%= link.user.name %> &nbsp; 
		        <small><%= time_ago_in_words(link.created_at) %> ago</small>
		      </small>
	  		</h5>
	  	</div>
	  <% end -%>
	</div>
</div>