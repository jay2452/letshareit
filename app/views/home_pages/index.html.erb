			<a name="how_to_upload"></a>
			<b><h3 align="center">How to Upload</h3></b>
		</div>

		<div class="main_contact_page">
			<a name="contact"></a>
			<b><h3 align="center">Contact Us</h3></b>
		</div>


	<% else # if user is signed in %>

