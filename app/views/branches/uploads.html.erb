<% provide(:title, "all uploads - #{@branch.name}") %>
<div>

  <div class="col-md-3">

  </div>

  <div class="col-md-6">
    <% if @uploads.count != 0 %>
      <div class="container-fluid"><br>
        <h4 align="center">all uploads in <%= @branch.name %></h4>
        <div class="flex-container-uploads">
          <div>
            <% @uploads.each do |upload| %>
              <div class="flex-item-uploads">
                <h5><%= link_to upload.subject.name, [upload.subject.branch, upload.subject] %></h5>
  				  		<h5>
  				  			&nbsp;&nbsp;&nbsp;
  				  			file: <%= link_to upload.topic, '#' %>
  				  			<small>
  					      		&nbsp;uploaded by: <%= upload.user.name %> &nbsp;
  					        <small><%= time_ago_in_words(upload.created_at) %> ago</small>
  					      </small>
  				  		</h5>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="container-fluid">
        <div class="jumbotron">
          <h3>No Uploads</h3>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-3">

  </div>
</div>
