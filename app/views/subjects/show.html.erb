<div>
  <p id="notice"><%= notice %></p>
  <div class="subject_show_page_nav">
    <div class="col-md-4" align="center">
      <b>Subject :</b> <%= @subject.name %>
    </div>

    <div class="col-md-4" align="center">
      <b>Code : </b><%= @subject.code %>
    </div>

    <div class="col-md-4" align="center">
      <b>Branch : </b><%= @subject.branch.name %>
    </div>
  </div>
  <!-- <hr style="margin-top: -0.1%; color:black;"> -->
  <div class="subject_show_page">
    <div class="container">
      <br>
      <div class="panel panel-default show_page_panel">
        <div class="panel panel-body">
          <% @uploads.each do |upload| %>
              <h3>
                <%= link_to upload.topic, upload.file.url , target: "_blank" %>
                <small>
                  uploaded by <%= upload.user.name %> &nbsp; 
                  <small><%= time_ago_in_words(upload.created_at) %> ago</small>
                </small>
              </h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>